{
  "name": "docbook",
  "version": "0.3.0",
  "description": "Static documentation generator",
  "main": "build/index.js",
  "scripts": {
    "babel": "babel ./src --out-dir build/ --copy-files",
    "minifyCSS": "cleancss -o build/core/templates/css/styles.css src/core/templates/css/styles.css",
    "minifyHTML": "html-minifier --collapse-whitespace --remove-comments --remove-optional-tags --remove-redundant-attributes --remove-script-type-attributes --remove-tag-whitespace --use-short-doctype src/core/templates/html.html -o build/core/templates/html.html",
    "build": "npm run babel && npm run minifyCSS && npm run minifyHTML"
  },
  "bin": {
    "docbook": "bin/docbook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blenderskool/docbook"
  },
  "author": "Akash Hamirwasia",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.4.3",
    "clean-css-cli": "^4.1.11"
  },
  "dependencies": {
    "clean-css": "^4.1.11",
    "dom-parser": "^0.1.5",
    "html-minifier": "^3.5.16",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "showdown": "^1.8.6"
  }
}
